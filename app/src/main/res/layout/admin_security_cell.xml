<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="63dp"
        android:contentDescription="_268_avatar_man_outline_4"
        android:src="@drawable/_268_avatar_man_outline_4" />
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:weightSum="10"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="turki"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="0555555"/>
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="turki@gmail.com"/>
</LinearLayout>
    <TextView
        android:id="@+id/tvActivated"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:text="@string/delete_ek1_string"
        android:textColor="@color/turki66_gmail_com_color"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:src="@drawable/ic_delete_foreground"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:text="@string/delete_ek1_string"
        android:textColor="@color/turki66_gmail_com_color"
        android:textSize="16sp" />

</LinearLayout>

</LinearLayout>