
		<LinearLayout

			xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:weightSum="10"
			android:paddingStart="20dp"
			android:paddingEnd="20dp"
			android:background="@color/ic_password_background"
			android:orientation="vertical"
			tools:context="com.example.beaware.change_password_activity">
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="3"
				android:layout_marginTop="30dp"
				android:src="@mipmap/ic_password"/>
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="0dp"
	android:orientation="vertical"
	android:layout_weight="7">
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Current Password"
		android:layout_marginTop="30dp"
		android:textSize="24sp"
		/>
	<EditText
		android:id="@+id/etOldPassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:minHeight="50dp"
		android:background="@drawable/rec_white_shape_with_corner"
		android:hint="   **********"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="New Password"
		android:layout_marginTop="30dp"
		android:textSize="24sp"
		/>
	<EditText
		android:id="@+id/etNewPassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:minHeight="50dp"
		android:background="@drawable/rec_white_shape_with_corner"
		android:hint="   **********"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Confirm Password"
		android:layout_marginTop="30dp"
		android:textSize="24sp"
		/>
	<EditText
		android:id="@+id/etConfirmPassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="50dp"
		android:background="@drawable/rec_white_shape_with_corner"
		android:layout_marginTop="10dp"
		android:hint="   **********"/>


	<Button
		android:id="@+id/btnPasswordSave"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:text="Save"
		android:layout_gravity="center"
		android:textStyle="bold"
		android:textSize="32sp"
		android:textColor="#949B92"/>
</LinearLayout>

		</LinearLayout>
